{% extends "layout.jinja2" %}

{% block content %}

<div class="track-background" style="background-image: url('{{track.album.images[0].url}}')">


    <div class="track-details">

        <form action="/predict" method="POST">
            <h3><input type="hidden"  name="title" value="{{track.name}}">{{track.name}} by <a href="/artist/{{track.artists[0].id}}">{{track.artists[0].name}}</a></h3>

            <p>popularity: <input type="hidden" name="popularity" value="{{track.popularity}}">{{track.popularity}}</p>
            <h6>0 --> 100</h6>

            <p>danceability: <input type="hidden" name="danceability" value="{{info.danceability}}">{{info.danceability}}</p>
            <h6>0.0 --> 1.0</h6>

            <p>energy: <input type="hidden" name="energy" value="{{info.energy}}">{{info.energy}}</p>
            <h6>0.0 --> 1.0</h6>

            <p>speechiness: <input type="hidden" name="speechiness" value="{{info.speechiness}}">{{info.speechiness}}</p>
            <h6>0.0 --> 1.0</h6>

            <p>acousticness: <input type="hidden" name="acousticness" value="{{info.acousticness}}">{{info.acousticness}}</p>
            <h6>0.0 --> 1.0</h6>

            <p>valence: <input type="hidden" name="valence" value="{{info.valence}}">{{info.valence}}</p>
            <h6>0.0 --> 1.0</h6>
            <h6>sad --> happy</h6>
            <input type="submit" value="predict">
        </form>

    </div>

</div>

{% endblock %}