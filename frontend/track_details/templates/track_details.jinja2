{% extends "layout.jinja2" %}

{% block content %}

<div class="track-background" style="background-image: url('{{track.image}}')">


    <div class="track-details">

        <form action="/predict/{{track.id}}" method="POST">
            <h3><input type="hidden"  name="title" value="{{track.title}}">{{track.title}} by <a href="/artist/{{artist.id}}">{{artist.name}}</a></h3>

            <p>popularity: <input type="hidden" name="popularity" value="{{track.popularity}}">{{track.popularity}}</p>
            <h6>0 --> 100</h6>

            <p>danceability: <input type="hidden" name="danceability" value="{{track.danceability}}">{{track.danceability}}</p>
            <h6>0.0 --> 1.0</h6>

            <p>energy: <input type="hidden" name="energy" value="{{track.energy}}">{{track.energy}}</p>
            <h6>0.0 --> 1.0</h6>

            <p>speechiness: <input type="hidden" name="speechiness" value="{{track.speechiness}}">{{track.speechiness}}</p>
            <h6>0.0 --> 1.0</h6>

            <p>acousticness: <input type="hidden" name="acousticness" value="{{track.acousticness}}">{{track.acousticness}}</p>
            <h6>0.0 --> 1.0</h6>

            <p>valence: <input type="hidden" name="valence" value="{{track.valence}}">{{track.valence}}</p>
            <h6>0.0 --> 1.0</h6>
            <h6>sad --> happy</h6>
            <input type="submit" value="judge me">
        </form>

    </div>

</div>

{% endblock %}