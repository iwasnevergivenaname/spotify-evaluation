{% extends "layout.jinja2" %}

{% block content %}

<div class="track-background" style="background-image: url({{ image }}); background-position: center; background-size: contain">


<p>{{artist.popularity}}% of spotify users listen to {{artist.name}}
    <br> {{artist.genres}}</p>

<hr>
<p>
top tracks:
{% for track in top_tracks.tracks %}
<p><a href="/track/{{track.id}}">{{track.name}} </a></p> </p>

{% endfor %}

<hr>
<p>
related artists:
{% for artist in related_artist.artists %}
<p><a href="/artist/{{artist.id}}">{{artist.name}}</a></p>
</p>

{% endfor %}

</div>

{% endblock %}