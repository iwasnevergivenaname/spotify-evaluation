{% extends "layout.jinja2" %}

{% block content %}

    <h1>moral judgment on {{ profile.display_name }}</h1>
    <p><a href="/saved/{{ profile.id }}">see saved evaluations</a></p>

    <div class="artist-container">
        {% for artist in artists['items'] %}
            {% if  artist.images[0].url %}
                <a href="/artist/{{ artist.id }}">
                <div class="grid-item">
                <h3>{{ artist.name }}</h3>
                <div class="grid-item" style="background-image: url('{{ artist.images[0].url }}')">
            {% else %}
                <div class="grid-item" style="background-image: url('../../static/img/venus.png')">
            {% endif %}
        </div>
        </div>
        </a>
        {% endfor %}
    </div>



    <div class="track-container">
        {% for track in tracks['items'] %}
            {% if track.album.images[0].url %}
                <div class="grid-item">
                <a href="/track/{{ track.id }}">
                <div class="grid-item" style="background-image: url('{{ track.album.images[0].url }}')">
            {% else %}
                <div class="grid-item" style="background-image: url('../../static/img/venus.png')">
            {% endif %}
        {#            <img class="grid-item" src="{{track.album.images[0].url}}" alt="{{track.name}}"/>#}
        <p>{{ track.name }} by {{ track.artists[0].name }}</p>
        </div>
        </a>
        </div>
        {% endfor %}


    </div>


{% endblock %}

