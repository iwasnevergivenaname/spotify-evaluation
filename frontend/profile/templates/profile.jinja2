{% extends "layout.jinja2" %}

{% block content %}

<h1>moral judgment on {{profile.display_name}}</h1>
    <p><a href="/saved/{{ profile.id }}">see saved evaluations</a></p>

<div class="track-container">
    {% for artist in artists['items'] %}

    <div class="grid-item">
        <dt>artist</dt>
        <dd>{{artist.name}}</dd>
        <dt>genres</dt>
        <dd>{{artist.genres}}</dd>
        <a href="/artist/{{artist.id}}"><img class="spotify-img" src="{{artist.images[0].url}}" alt="{{artist.name}}" style="height: 320px"/></a>
        <h6>popularity: {{artist.popularity}}%</h6>
    </div>
    {% endfor %}
</div>
<br><br>

<div class="track-container">
    {% for track in tracks['items'] %}

    <div class="grid-item">

        <p>{{track.name}} by {{track.artists[0].name}}</p>
        <a href="/track/{{track.id}}"><img class="spotify-img" src="{{track.album.images[0].url}}" alt="{{track.name}}" style="height: 320px"/></a>
        <h6>popularity: {{track.popularity}}%</h6>

    </div>
    {% endfor %}


</div>


{% endblock %}