{%extends 'layout.jinja2'%}

{%block content%}
<hr>
<div class="artist-container">
    {% if search.artists %}
    {% for artist in search.artists['items'] %}

    {% if artist.images[0] %}
    <a href="/artist/{{artist.id}}">
        <div class="grid-item" style="background-image: url('{{artist.images[0].url}}')">
            {% else %}
            <a href="/artist/{{artist.id}}">
                <div class="grid-item" style="background-image: url('../../static/img/venus.png')">
                    {% endif %}
                    {{artist.name}}<br>
                </div>
            </a>
            {% endfor %}
            {% endif %}
        </div>
    </a></div>
<hr>

<div class="track-container">
    {% if search.tracks %}
    {% for track in search.tracks['items'] %}
    {% if track.album.images[0] %}
    <a href="/track/{{track.id}}">
        <div class="grid-item" style="background-image: url('{{track.album.images[0].url}}')">
            {% else %}
            <a href="/track/{{track.id}}">
                <div class="grid-item" style="background-image: url('../../static/img/venus.png')">
                    {% endif %}
                    {{track.name}} by {{track.album.artists[0].name}}<br>
                </div>
            </a>
            {% endfor %}
            {% endif %}
        </div>
    </a></div>

{%endblock%}